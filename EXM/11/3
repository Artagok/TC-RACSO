input y
{
  if (not mxxstopsininputsteps) 
    if (y != 1 and y != 0)	// Dom(p) = Inf - {0,1}
      output y - 2;		// Im(p)  = Inf
}

input y
{
  if (not mxxstopsininputsteps)
    if (y != 0)			// Dom(q) = Inf - {0}
      output y;			// Im(q)  = Inf - {0} 
}

input y
{
  if (not mxxstopsininputsteps)
    output y+2;			// Dom(r) = Inf  // Im(r) = Inf - {0,1}

}
